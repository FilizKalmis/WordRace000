@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center">
    <h1 class="display-4">WordRace'e Hoş Geldiniz!</h1>
    <p>Eğlenceli ve etkili bir şekilde yeni kelimeler öğrenin. 6 aşamalı öğrenme algoritması ile kalıcı öğrenme sağlayın.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-book fa-3x mb-3 text-primary"></i>
                <h3>300+ Kelime</h3>
                <p>Özenle seçilmiş kelime havuzu</p>
                <a asp-controller="Words" asp-action="Index" class="btn btn-primary">Kelimelere Göz At</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-graduation-cap fa-3x mb-3 text-success"></i>
                <h3>Akıllı Öğrenme</h3>
                <p>6 aşamalı öğrenme sistemi</p>
                <a asp-controller="Quiz" asp-action="Start" class="btn btn-success">Quiz'e Başla</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-gamepad fa-3x mb-3 text-info"></i>
                <h3>Eğlenceli Oyunlar</h3>
                <p>Wordle ve Word Chain</p>
                <div class="btn-group">
                    <a asp-controller="Games" asp-action="Wordle" class="btn btn-info">Wordle</a>
                    <a asp-controller="Games" asp-action="WordChain" class="btn btn-info">Word Chain</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}

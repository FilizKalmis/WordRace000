@model WordRace000.Models.Quiz

@{
    ViewData["Title"] = "Yeni Quiz";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0 text-center">Yeni Quiz Başlat</h2>
        </div>
        <div class="card-body text-center">
            <p class="lead">
                Hazır olduğunuzda quizi başlatabilirsiniz. Size rastgele @(ViewBag.DailyWordCount + ViewBag.ScheduledWordCount) kelime sorulacak.
            </p>

            <div class="d-flex justify-content-center gap-3">
                <form asp-action="StartQuiz" method="post">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-play me-2"></i>Quizi Başlat
                    </button>
                </form>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>
</div> 
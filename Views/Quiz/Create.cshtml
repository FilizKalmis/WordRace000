@model WordRace000.Models.Quiz

@{
    ViewData["Title"] = "Yeni Quiz";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Yeni Quiz Başlat</h3>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <p class="lead">
                    Hazır olduğunuzda quizi başlatabilirsiniz. 
                    Size rastgele 10 kelime sorulacak.
                </p>
            </div>

            <form asp-action="StartQuiz" method="post">
                @Html.AntiForgeryToken()
                
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-play me-2"></i>
                        Quizi Başlat
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                        <i class="fas fa-arrow-left me-2"></i>
                        Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 
@model IEnumerable<WordRace000.Models.Quiz>

@{
    ViewData["Title"] = "Quizler";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Quiz Listesi</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Quiz
            </a>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var quiz in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Quiz #@quiz.Id</h5>
                            <p class="card-text">
                                <small class="text-muted">@quiz.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </p>
                            <p class="card-text">
                                Skor: @quiz.Score
                            </p>
                            <a asp-action="Details" asp-route-id="@quiz.Id" class="btn btn-info">
                                Detaylar
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info">
                    Henüz quiz kaydınız bulunmuyor. Yeni bir quiz oluşturmak için üstteki butonu kullanabilirsiniz.
                </div>
            </div>
        }
    </div>
</div> 
@model WordRace000.Models.User

@{
    ViewData["Title"] = "Profili Düzenle";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0">Profili Düzenle</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-posta</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="ChangePassword" class="btn btn-secondary">Şifre Değiştir</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
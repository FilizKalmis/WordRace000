@model WordRace000.Models.ProfileViewModel

<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-body text-center">
            <h3 class="card-title">@Model.User.Username</h3>
            <p class="text-muted">@Model.User.Email</p>
            <div class="d-flex justify-content-center gap-2">
                <a asp-action="Edit" class="btn btn-primary">Profili Düzenle</a>
                <a asp-action="Settings" class="btn btn-outline-primary">Ayarlar</a>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Öğrenme İstatistikleri</h4>
            <div class="row text-center g-3">
                <div class="col-md-4">
                    <h5>Toplam Kelime</h5>
                    <p class="h3">@Model.TotalWords</p>
                </div>
                <div class="col-md-4">
                    <h5>Öğrenilen</h5>
                    <p class="h3">@Model.LearnedWords</p>
                </div>
                <div class="col-md-4">
                    <h5>Öğrenme Aşamasında</h5>
                    <p class="h3">@Model.InProgressWords</p>
                </div>
            </div>
            <div class="row text-center g-3 mt-3">
                <div class="col-md-6">
                    <h5>Toplam Quiz</h5>
                    <p class="h3">@Model.TotalQuizzes</p>
                </div>
                <div class="col-md-6">
                    <h5>Son Quiz Tarihi</h5>
                    <p class="h3">@(Model.LastQuizDate?.ToString("dd.MM.yyyy") ?? "-")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Bazında İlerleme</h4>
            @foreach (var category in Model.CategoryProgress)
            {
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span>@category.CategoryName</span>
                        <span>@category.LearnedWords / @category.TotalWords</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" 
                             style="width: @(category.TotalWords > 0 ? (category.LearnedWords * 100 / category.TotalWords) : 0)%" 
                             aria-valuenow="@category.LearnedWords" 
                             aria-valuemin="0" 
                             aria-valuemax="@category.TotalWords">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 